# NTFS / VFAT Mounting
#

# Time to load fuse kids...
grep -q '^fuse' /proc/modules || insmod /opt/lib/modules/fuse.ko

# And Linux FS drivers
grep -q '^mbcache' /proc/modules || insmod /opt/lib/modules/mbcache.ko
grep -q '^jbd' /proc/modules || insmod /opt/lib/modules/jbd.ko
grep -q '^jbd2' /proc/modules || insmod /opt/lib/modules/jbd2.ko
grep -q '^exportfs' /proc/modules || insmod /opt/lib/modules/exportfs.ko
grep -q '^ext2' /proc/modules || insmod /opt/lib/modules/ext2.ko
grep -q '^ext3' /proc/modules || insmod /opt/lib/modules/ext3.ko
grep -q '^ext4' /proc/modules || insmod /opt/lib/modules/ext4.ko
grep -q '^reiserfs' /proc/modules || insmod /opt/lib/modules/reiserfs.ko
grep -q '^xfs' /proc/modules || insmod /opt/lib/modules/xfs.ko

device=${1}

# Is there a parameter ?
if [ ! -z ${device} ]; then
  # Does it looks like being a block device ?
  if [ -b ${device} ]; then
    # Clean mountpoint first
    umount /mnt >/dev/null 2>&1
    # Try to mount as ntfs first (mount.ntfs is a symlink to ntfs-3g binary)
    if mount.ntfs -o ignore_case ${device} /mnt; then
      echo "*** INFO: ${device} successfully mounted as /mnt (NTFS-3G)"
    # Use regular mount command (linux stuff)
    elif mount ${device} /mnt; then
      echo "*** INFO: ${device} successfully mounted as /mnt"
    else
      echo "*** ERROR: Unable to mount device ${device}"
      exit 1
    fi
  else
    echo "*** ERROR: Paramater isn't a block device (trying to mount ${device})" 
    exit 1
  fi
else
  echo "*** ERROR: No parameter" 
  exit 1
fi
